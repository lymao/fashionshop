
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!--banner-->
<div class="banner1">
    <div class="container">
        <h3><a href="/">Trang chủ</a> / <span>Giỏ hàng</span></h3>
    </div>
</div>
<!--banner-->
<div class="content">
    <div class="typo-w3">
        <div class="container">
            <h2>Giỏ hàng</h2>
            <div id="cartContent">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Mã SP</th>
                            <th>Tên sản phẩm</th>
                            <th>Hình ảnh</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody id="cartBody"></tbody>
                </table>
                <div id="showMessage" style="display:none;"></div><br />
                <button class="btn btn-success" id="btnContinue">Tiếp tục mua hàng</button>
                <button class="btn btn-danger" id="btnDeleteAll">Xóa giỏ hàng</button>
                <button class="btn btn-default" id="btnCheckout">Thanh toán</button>
                <div class="pull-right">
                    Tổng tiền: <span id="lblTotalOrder"></span>
                </div>
            </div><br />

            <div id="divCheckout" style="display:none;">
                <h3>Thanh toán</h3><br />
                <div class="row">
                    <div class="col-lg-6">
                        <form class="form-horizontal" id="frmCheckout">
                            @if (Request.IsAuthenticated)
                            {
                                <input type="checkbox" id="chkUserLoginInfo" />
                                <label for="chkUserLoginInfo" style="color:blue;">Sử dụng thông tin đăng nhập của bạn.</label>
                            }
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="user">Họ tên:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="name" name="name" placeholder="Nhập họ tên">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="address">Địa chỉ:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="address" name="address" placeholder="Nhập địa chỉ">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="email">Email:</label>
                                <div class="col-sm-10">
                                    <input type="email" class="form-control" id="email" name="email" placeholder="Nhập email">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="phone">Điện thoại:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="phone" name="phone" placeholder="Nhập điện thoại">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="message">Tin nhắn:</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" rows="5" id="message" name="message" placeholder="Tin nhắn"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button id="btnCreateOrder" class="btn btn-default">Gửi</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>


<script id="template" type="x-tmpl-mustache">
    <tr>
        <td>{{ProductId}}</td>
        <td>{{ProductName}}</td>
        <td><img src="{{Image}}" class="img-rounded" height="100" /></td>
        <td>{{PriceF}}</td>
        <td><input type="number" data-id="{{ProductId}}" data-price="{{Price}}" class="input-append txtQuantity" value="{{Quantity}}" /></td>
        <td id="amount_{{ProductId}}">{{Amount}}</td>
        <td><button class="btn btn-danger btnDeleteItem" data-id="{{ProductId}}"><i class="fa fa-close"></i></button></td>
    </tr>

</script>

