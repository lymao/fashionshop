@model Web.Models.FeedbackViewModel
@using BotDetect.Web.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl" rel="stylesheet" type="text/css" />
<style>
    #map {
        width: 100%;
        height: 400px;
        background-color: grey;
    }
</style>
<input type="hidden" id="lat" value="@Model.ContactDetail.Lat" />
<input type="hidden" id="lng" value="@Model.ContactDetail.Lng" />
<div class="content">
    <div class="typo-w3">
        <div class="container">            
                <div class="row">
                    <div class="col-lg-6">
                        <h3>Thông tin liên hệ</h3>
                        <div>
                            <p>Tên công ty: @Model.ContactDetail.Name</p>
                            <p>Địa chỉ: @Model.ContactDetail.Address</p>
                            <p>Email: @Model.ContactDetail.Email</p>
                            <p>Điện thoại: @Model.ContactDetail.Phone</p>
                        </div><br />                       
                        <div id="map"></div>
                    </div>

                    <div class="col-lg-6">
                        <h3>Thông tin của bạn</h3>
                        @using (Html.BeginForm("SenFeedback", "ContactDetail", FormMethod.Post))
                        {
                            if (ViewData["SuccessMsg"] != null)
                            {
                                <div class="alert alert-success" role="alert">
                                    <strong>Chúc mừng bạn! </strong> gửi phản hồi thành công.
                                    <br />Chúng tôi sẽ liên hệ lại sớm nhất có thể.
                                </div>
                            }
                            @Html.AntiForgeryToken();
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label for="user">Họ tên:</label><br />
                                @Html.TextBoxFor(x=>x.Name,new { @class = "form-control", @placeholder = "Nhập họ tên" })
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="email">Email:</label>
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Nhập email" })  
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })                              
                            </div>
                            <div class="form-group">
                                <label for="message">Tin nhắn:</label>
                                @Html.TextAreaFor(x=>x.Message,new { @class = "form-control",@rows="5", @placeholder = "Tin nhắn của bạn"})
                            </div>

                            <div>
                                @{MvcCaptcha exampleCaptcha = new MvcCaptcha("ExampleCaptcha");
                                }
                                @Html.Captcha(exampleCaptcha)<br />
                                @Html.TextBox("CaptchaCode")<br />
                                @Html.ValidationMessage("CaptchaCode", "", new { @class = "text-danger" })
                            </div><br />
                            
                            <button type="submit" class="btn btn-default">Gửi</button>
                        }
                          
                    </div>                   
                </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>

<script src="~/Assets/client/js/controllers/contact.js"></script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAzxucoCn8j_10N3QC5EMoj8GXw-UIRAgk&callback=initMap">
</script>

