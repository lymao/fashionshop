@model Web.Models.ProductViewModel

@{
    var moreImages = (List<string>)@ViewBag.MoreImages;
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="single-wl3">
    <div class="container">
        <div class="single-grids">
            <div class="col-md-9 single-grid">
                <div clas="single-top">
                    <div class="single-left">
                        <div class="flexslider">
                            <ul class="slides">
                                @foreach (var item in moreImages)
                                {
                                    <li data-thumb="@item">
                                        <div class="thumb-image"> <img src="@item" data-imagezoom="true" class="img-responsive"> </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="single-right simpleCart_shelfItem">
                        <h4>@Model.Name</h4>
                        <div class="block">
                            <div class="starbox small ghosting"> </div>
                        </div><br />
                        @if (Model.Quantity > 0)
                        {
                            if (Model.PromotionPrice.HasValue)
                            {
                                <p><del>@Model.PromotionPrice.Value.ToString("N0")</del></p>
                            }
                            <p class="price item_price">@Model.Price.ToString("N0")</p>
                        }
                        else
                        {
                            <p style="color:red;">Hết hàng</p>
                        }

                        <div class="description">
                            <p><span>Tổng quan nhanh : </span> @Html.Raw(Model.Description)</p>
                        </div>
                        <div class="color-quality">
                            <h6>Số lượng :</h6>
                            <div class="quantity">
                                <div class="quantity-select">
                                    <div class="entry value-minus1">&nbsp;</div>
                                    <div id="quantityDetail" class="entry value1"><span>1</span></div>
                                    <div class="entry value-plus1 active">&nbsp;</div>
                                </div>
                            </div>
                        </div>
                        <div class="women">
                            <label>Kích cỡ :</label>
                            <span class="size">
                                @if (Model.ProductSizes.Count() > 0)
                                {
                                    <select id="myselect">
                                        <option value="">Chọn size</option>
                                        @foreach (var size in Model.ProductSizes)
                                        {
                                            <option value="@size.Size.ID">@size.Size.Name</option>
                                        }
                                    </select>
                                }
                            </span>
                            <a href="#" data-id="@Model.ID" data-text="Add To Cart" class="my-cart-b item_add btnAddToCart">Thêm giỏ hàng</a>
                        </div>
                        @{ var listTags = ViewBag.Tag as IEnumerable<Web.Models.TagViewModel>;}
                        <div class="tag">
                            <label>Tags:</label>
                            <ul class="taglist">
                                @foreach (var item in listTags)
                                {
                                    <li><a href="/tag/@(item.ID).html">@(item.Name)</a></li>
                                }
                            </ul>
                        </div>
                        <div class="social-icon">
                            <a href="#"><i class="icon"></i></a>
                            <a href="#"><i class="icon1"></i></a>
                            <a href="#"><i class="icon2"></i></a>
                            <a href="#"><i class="icon3"></i></a>
                        </div>
                    </div>
                    <div class="clearfix"> </div>
                </div>
            </div>
            @{ var topViewProducts = ViewBag.TopViewProducts as List<Web.Models.ProductViewModel>;}
            @if (topViewProducts != null)
            {
                <div class="col-md-3 single-grid1">
                    <h3>Xem nhiều nhất</h3>
                    @foreach (var item in topViewProducts.Take(4))
                    {
                        var url = "/" + item.Alias + ".p-" + item.ID + ".html";
                        <div class="recent-grids">
                            <div class="recent-left">
                                <a href="@url"><img class="img-responsive " src="@item.Image" alt=""></a>
                            </div>
                            <div class="recent-right">
                                <h6 class="best2"><a href="@url">@item.Name</a></h6>
                                <div class="block">
                                    <div class="starbox small ghosting"> </div>
                                </div>
                                <span class="price-in1">@item.Price.ToString("N0")</span>
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                    }
                </div>
            }

            <div class="clearfix"> </div>
        </div>
        <!--Product Description-->
        <div class="product-w3agile">
            <h3 class="tittle1">Mô tả sản phẩm</h3>
            <div class="product-grids">
                @{var recentProducts = ViewBag.Views as List<Web.Models.ProductViewModel>; }
                <div class="col-md-4 product-grid">
                    <h3>Sản phẩm vừa xem</h3>
                    <br>
                    @if (recentProducts != null)
                    {
                        <div id="owl-demo" class="owl-carousel">
                            <div class="item">
                                @foreach (var item in recentProducts.Take(4))
                                {
                                    var url = "/" + item.Alias + ".p-" + item.ID + ".html";
                                    <div class="recent-grids">
                                        <div class="recent-left">
                                            <a href="@url"><img class="img-responsive " src="@item.Image" alt=""></a>
                                        </div>
                                        <div class="recent-right">
                                            <h6 class="best2"><a href="@url">@item.Name</a></h6>
                                            <div class="block">
                                                <div class="starbox small ghosting"> </div>
                                            </div>
                                            <span class="price-in1">@item.Price.ToString("N0")</span>
                                        </div>
                                        <div class="clearfix"> </div>
                                    </div>
                                }
                            </div>
                            @if (recentProducts.Count() > 4)
                            {
                                <div class="item">
                                    @foreach (var item in recentProducts.Skip(4))
                                    {
                                        var url = "/" + item.Alias + ".p-" + item.ID + ".html";
                                        <div class="recent-grids">
                                            <div class="recent-left">
                                                <a href="@url"><img class="img-responsive " src="@item.Image" alt=""></a>
                                            </div>
                                            <div class="recent-right">
                                                <h6 class="best2"><a href="@url">@item.Name</a></h6>
                                                <div class="block">
                                                    <div class="starbox small ghosting"> </div>
                                                </div>
                                                <span class="price-in1">@item.Price.ToString("N0")</span>
                                            </div>
                                            <div class="clearfix"> </div>
                                        </div>
                                    }
                                </div>
                            }

                        </div>
                    }
                </div>
                <div class="col-md-8 product-grid1">
                    <div class="tab-wl3">
                        <div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">
                            <ul id="myTab" class="nav nav-tabs left-tab" role="tablist">
                                <li role="presentation" class="active"><a href="#home" id="home-tab" role="tab" data-toggle="tab" aria-controls="home" aria-expanded="true">Mô tả</a></li>
                                <li role="presentation"><a href="#reviews" role="tab" id="reviews-tab" data-toggle="tab" aria-controls="reviews">Nhận xét (1)</a></li>

                            </ul>
                            <div id="myTabContent" class="tab-content">
                                <div role="tabpanel" class="tab-pane fade in active" id="home" aria-labelledby="home-tab">
                                    <div class="descr">
                                        <p>@Html.Raw(Model.Content)</p>
                                    </div>
                                </div>
                                <div role="tabpanel" class="tab-pane fade" id="reviews" aria-labelledby="reviews-tab">
                                    <div class="descr">
                                        <div class="reviews-top">
                                            <div class="reviews-left">
                                                <img src="/Assets/client/images/men3.jpg" alt=" " class="img-responsive">
                                            </div>
                                            <div class="reviews-right">
                                                <ul>
                                                    <li><a href="#">Admin</a></li>
                                                    <li><a href="#"><i class="glyphicon glyphicon-share" aria-hidden="true"></i>Reply</a></li>
                                                </ul>
                                                <p>Ut enim ad minima veniam, quis nostrum exercitationem ullam corporis suscipit laboriosam, nisi ut aliquid ex ea commodi consequatur? Quis autem vel eum iure reprehenderit.</p>
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                        <div class="reviews-bottom">
                                            <h4>Add Reviews</h4>
                                            <p>Your email address will not be published. Required fields are marked *</p>
                                            <p>Your Rating</p>
                                            <div class="block">
                                                <div class="starbox small ghosting"><div class="positioner"><div class="stars"><div class="ghost" style="width: 42.5px; display: none;"></div><div class="colorbar" style="width: 42.5px;"></div><div class="star_holder"><div class="star star-0"></div><div class="star star-1"></div><div class="star star-2"></div><div class="star star-3"></div><div class="star star-4"></div></div></div></div></div>
                                            </div>
                                            <form action="#" method="post">
                                                <label>Your Review </label>
                                                <textarea type="text" Name="Message" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Message...';}" required="">Message...</textarea>
                                                <div class="row">
                                                    <div class="col-md-6 row-grid">
                                                        <label>Name</label>
                                                        <input type="text" value="Name" Name="Name" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Name';}" required="">
                                                    </div>
                                                    <div class="col-md-6 row-grid">
                                                        <label>Email</label>
                                                        <input type="email" value="Email" Name="Email" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Email';}" required="">
                                                    </div>
                                                    <div class="clearfix"></div>
                                                </div>
                                                <input type="submit" value="SEND">
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div role="tabpanel" class="tab-pane fade" id="custom" aria-labelledby="custom-tab">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
        <!--Product Description-->
    </div>
</div>
<!--single-->
<div class="new-arrivals-w3agile">
    @{ var relatedProducts = ViewBag.RelatedProducts as List<Web.Models.ProductViewModel>;}
    <div class="container">
        <h3 class="tittle1">Sản phẩm liên quan </h3>
        <div class="arrivals-grids">
            @foreach (var item in relatedProducts)
            {
                var url = "/" + item.Alias + ".p-" + item.ID + ".html";
                <div class="col-md-3 arrival-grid simpleCart_shelfItem">
                    <div class="grid-arr">
                        <div class="grid-arrival">
                            <figure>
                                <a href="@url">
                                    <div class="grid-img">
                                        <img src="@item.Image1" class="img-responsive" alt="">
                                    </div>
                                    <div class="grid-img">
                                        <img src="@item.Image" class="img-responsive" alt="">
                                    </div>
                                </a>
                            </figure>
                        </div>
                        <div class="ribben">
                            <p>NEW</p>
                        </div>
                        <div class="ribben1">
                            <p>SALE</p>
                        </div>
                        <div class="block">
                            <div class="starbox small ghosting"> </div>
                        </div>
                        <div class="women">
                            <h6><a href="@url">@item.Name</a></h6>
                            <span class="size">
                                @if (item.ProductSizes.Count() > 0)
                                {
                                    foreach (var size in item.ProductSizes)
                                    {
                                        <text>@size.Size.Name  &nbsp;</text>
                                    }
                                }
                            </span>

                            @if (item.Quantity > 0)
                            {
                                <p>
                                    @if (item.PromotionPrice.HasValue)
                                    {
                                        <del>@item.PromotionPrice.Value.ToString("N0")</del>
                                    }
                                    <em class="item_price">@item.Price.ToString("N0")</em>
                                </p>
                            }
                            else
                            {
                                <p style="color:red;">Hết hàng</p>
                            }

                            <a href="#" data-id="@item.ID" data-text="Add To Cart" class="my-cart-b item_add btnAddToCart">Thêm giỏ hàng</a>
                        </div>
                    </div>
                </div>
            }

            <div class="clearfix"></div>
        </div>
    </div>
</div>
